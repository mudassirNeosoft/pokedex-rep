    "bundle":"yarn bundle:utils && yarn bundle:components",
    "build":"lerna run --parallel build",
    "bootstrap":"lerna bootstrap"
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "lerna": "^6.6.2"
  },
  "dependencies": {
  }
}
