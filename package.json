{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run --scope pokedex dev ",
    "bundle:utils": "lerna run --scope @pokedex/utils --stream rollup",
